# .env.example - Variables de entorno para FacturAPI SaaS

# === BASE DE DATOS ===
DATABASE_URL="postgresql://usuario:password@localhost:5432/facturapi_saas"

# === REDIS (CRÍTICO PARA CLUSTERING) ===
# Railway configurará esto automáticamente cuando agregues Redis service
REDIS_URL="redis://localhost:6379"
# O en Railway: redis://default:password@redis-service:6379

# === FACTURAPI ===
# Clave administrativa para crear organizaciones
FACTURAPI_USER_KEY="live_xxx_or_test_xxx"

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN="123456789:ABCdefGHIjklMNOpqrSTUvwxyz"
ADMIN_CHAT_IDS="123456789,987654321"

# === STRIPE ===
STRIPE_SECRET_KEY="sk_live_xxx_or_sk_test_xxx"
STRIPE_WEBHOOK_SECRET="whsec_xxx"

# === CONFIGURACIÓN DE APLICACIÓN ===
NODE_ENV="development"
PORT="3000"
API_BASE_URL="http://localhost:3000"

# === RAILWAY ESPECÍFICO ===
IS_RAILWAY="true"
RAILWAY_ENVIRONMENT="production"

# === HEROKU ESPECÍFICO ===
IS_HEROKU="false"
HEROKU_APP_NAME="tu-app-name"

# === DEBUGGING ===
DEBUG_DATABASE="false"

# === CONFIGURACIÓN DE CLUSTERING ===
# Número de workers (automático por defecto)
CLUSTER_WORKERS="auto"

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"

# === TIMEOUTS ===
FACTURAPI_TIMEOUT_MS="30000"
DATABASE_TIMEOUT_MS="20000"

# === STORAGE ===
MAX_FILE_SIZE_MB="10"