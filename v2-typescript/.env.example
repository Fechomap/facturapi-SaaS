# .env.example - Variables de entorno para FacturAPI SaaS v2 (TypeScript - Sin Stripe)

# === ENTORNO ===
NODE_ENV=development

# === BASE DE DATOS ===
# Railway PostgreSQL
DATABASE_URL=postgresql://postgres:password@host:port/database

# === REDIS (CR√çTICO PARA CLUSTERING) ===
# Railway Redis
REDIS_URL=redis://default:password@host:port

# === API ===
API_BASE_URL=http://localhost:3001
API_PORT=3001

# === FACTURAPI ===
# Clave administrativa para crear organizaciones
FACTURAPI_USER_KEY=sk_user_xxxxxxxxxxxxxxxxxxxxxxxxxx

# === TELEGRAM BOT ===
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrSTUvwxyz
ADMIN_CHAT_IDS=123456789,987654321

# === SEGURIDAD ===
JWT_SECRET=tu_jwt_secret_super_seguro
SESSION_SECRET=tu_session_secret_super_seguro

# === RATE LIMITING ===
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# === LOGS ===
LOG_LEVEL=info

# === BULL QUEUE ===
BULL_BOARD_PORT=3002
