{
  "name": "facturapi-saas-v2",
  "version": "2.0.0",
  "description": "Sistema de facturaciÃ³n SaaS basado en FacturAPI con soporte multi-tenant - TypeScript Edition (Sin Stripe)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "dev:bot": "ts-node-dev --respawn --transpile-only src/bot.ts",
    "dev:cluster": "ts-node-dev --respawn --transpile-only src/cluster.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:bot\"",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "start:cluster": "node dist/cluster.js",
    "start:bot": "node dist/bot.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:bot\"",
    "typecheck": "tsc --noEmit",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:deploy": "prisma migrate deploy",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "postbuild": "npm run prisma:generate"
  },
  "keywords": [
    "facturapi",
    "saas",
    "multi-tenant",
    "typescript",
    "invoice",
    "telegram-bot"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "archiver": "^7.0.1",
    "axios": "^1.8.4",
    "bull": "^4.16.5",
    "bull-board": "^1.7.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "exceljs": "^4.4.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "facturapi": "^4.6.0",
    "form-data": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.45",
    "node-cron": "^3.0.3",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.1",
    "pm2": "^5.3.0",
    "redis": "^4.7.1",
    "telegraf": "^4.16.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/archiver": "^7.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.11.0",
    "@types/node-cron": "^3.0.11",
    "@types/pdf-parse": "^1.1.4",
    "@types/pg": "^8.11.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.x"
  }
}
