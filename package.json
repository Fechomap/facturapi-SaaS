{
  "name": "facturapi-saas",
  "version": "1.0.0",
  "description": "Sistema de facturaci√≥n SaaS basado en FacturAPI con soporte multi-tenant",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "start:cluster": "node cluster.js",
    "start:bot": "node bot.js",
    "start:all": "concurrently \"npm run start\" \"npm run start:bot\"",
    "start:cluster:all": "concurrently \"npm run start:cluster\" \"npm run start:bot\"",
    "start:mcp": "node scripts/start-mcp-server.js",
    "dev": "NODE_ENV=development nodemon server.js",
    "dev:bot": "NODE_ENV=development nodemon bot.js",
    "dev:all": "NODE_ENV=development concurrently \"npm run dev\" \"npm run dev:bot\"",
    "dev:all:mcp": "NODE_ENV=development concurrently \"npm run dev\" \"npm run dev:bot\" \"npm run start:mcp\"",
    "test": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:redis": "node scripts/testing/test-redis.js",
    "test:pdf": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/pdf-analysis.handler.test.js",
    "test:invoice": "NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest tests/invoice-generation.handler.test.js",
    "test:clustering": "node scripts/testing/test-clustering.js",
    "test:bug-prevention": "npm run test:redis && npm run test:pdf && npm run test:invoice",
    "test:integration": "npm run test:clustering",
    "test:all": "npm run test && npm run test:integration",
    "test:subscription": "node tests/test-subscription-flow.js",
    "test:subscription:shell": "./tests/run-subscription-test.sh",
    "test:full": "./scripts/run-full-test.sh",
    "cleanup:sessions": "node scripts/database/cleanup-sessions.js",
    "cleanup:database": "node scripts/database/cleanup-database.js",
    "admin:create-plan": "node scripts/admin/create-subscription-plan.js",
    "admin:check-plans": "node scripts/admin/check-plans.js",
    "admin:update-price": "node scripts/admin/update-plan-price.js",
    "monitor:benchmark": "node scripts/monitoring/benchmark-before-after.js",
    "monitor:audit-env": "node scripts/monitoring/audit-env.js",
    "backup:create": "bash scripts/database/backups/backup_dbs.sh",
    "backup:restore": "bash scripts/database/backups/restore_dbs.sh",
    "setup:mcp": "./scripts/setup-mcp.sh",
    "migrate": "prisma migrate dev",
    "studio": "prisma studio",
    "lint": "eslint .",
    "format": "prettier --write .",
    "build": "prisma generate",
    "railway:build": "npx prisma generate",
    "railway:start": "node cluster.js",
    "railway:start:bot": "node bot.js",
    "railway:init-db": "node scripts/init-railway-db.js",
    "init-db": "node scripts/init-db.js",
    "reset-db": "prisma migrate reset --force && prisma migrate deploy"
  },
  "dependencies": {
    "@prisma/client": "^6.6.0",
    "archiver": "^7.0.1",
    "axios": "^1.8.4",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.1",
    "facturapi": "^4.6.0",
    "form-data": "^4.0.2",
    "jsonwebtoken": "^9.0.2",
    "moment-timezone": "^0.5.45",
    "node-cron": "^3.0.3",
    "pdf-parse": "^1.1.1",
    "pg": "^8.11.3",
    "pino": "^8.17.0",
    "pino-pretty": "^10.3.1",
    "pm2": "^5.3.0",
    "redis": "^4.7.1",
    "stripe": "^17.7.0",
    "telegraf": "^4.16.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "prettier": "^3.5.3",
    "prisma": "^6.6.0"
  },
  "engines": {
    "node": "18.x"
  }
}
